<config
  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
  xmlns='http://www.ehcache.org/v3'
  xmlns:tx='http://www.ehcache.org/v3/tx'
  xsi:schemaLocation="http://www.ehcache.org/v3 ../../../../../xml/src/main/resources/ehcache-core.xsd
                        http://www.ehcache.org/v3/tx ../../../main/resources/ehcache-tx-ext.xsd">

  <service>
    <tx:jta-tm
      transaction-manager-lookup-class="org.ehcache.transactions.xa.txmgr.btm.BitronixTransactionManagerLookup"/>
  </service>

  <cache alias="xaCache1">
    <key-type>java.lang.String</key-type>
    <value-type>java.lang.String</value-type>
    <expiry>
      <none/>
    </expiry>
    <resources>
      <heap unit="entries">20</heap>
    </resources>
    <tx:xa-store unique-XAResource-id="INVALID"/>
  </cache>

</config>
