<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://www.ehcache.org/v3'
    xmlns:jsr107='http://www.ehcache.org/v3/jsr107'
    xsi:schemaLocation="http://www.ehcache.org/v3 ../../../../impl/src/main/resources/ehcache-core.xsd
                        http://www.ehcache.org/v3/jsr107 ../../main/resources/ehcache-107ext.xsd">

  <service>
    <jsr107:defaults default-template="t">
      <jsr107:cache name="foos" template="v"/>
    </jsr107:defaults>
  </service>

  <!-- cacheManager.createCache("foo", )  -->

  <cacheTemplate name="t">
    <capacity>2000</capacity>
    <cacheWriter>com.pany.Writer</cacheWriter>
  </cacheTemplate>

  <cache alias="bars" uses="v">
    <key-type>java.lang.String</key-type>
    <value-type>java.lang.String</value-type>
    <capacity>1200</capacity>
  </cache>

  <cacheTemplate name="v">
    <capacity>2000</capacity>
    <cacheWriter>com.pany.Writer</cacheWriter>
  </cacheTemplate>

  <cache alias="foobars">
  </cache>

  <!-- other xml ns here -->

</config>