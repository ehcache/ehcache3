<ehcache:config
    xmlns:ehcache="http://www.ehcache.org/v3"
    xmlns:jcache="http://www.ehcache.org/v3/jsr107">

  <ehcache:service>
    <ehcache:default-serializers>
      <ehcache:serializer type="java.lang.Object">org.ehcache.internal.serialization.JavaSerializer</ehcache:serializer>
    </ehcache:default-serializers>
  </ehcache:service>
  <ehcache:service>
    <jcache:defaults>
      <jcache:cache name="defaultCache" template="defaultCacheTemplate"/>
    </jcache:defaults>
  </ehcache:service>

  <ehcache:cache-template name="defaultCacheTemplate">
    <ehcache:heap size="200" unit="entries"/>
  </ehcache:cache-template>

</ehcache:config>