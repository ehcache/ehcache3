<config xmlns='http://www.ehcache.org/v3'>

  <!-- tag::expiry[] -->
  <cache alias="withExpiry">
    <expiry>
      <ttl unit="seconds">20</ttl> <!--1-->
    </expiry>
    <heap>100</heap>
  </cache>
  <!-- end::expiry[] -->

  <!-- tag::customExpiry[] -->
  <cache alias="withCustomExpiry">
    <expiry>
      <class>com.pany.ehcache.MyExpiry</class> <!--1-->
    </expiry>
    <heap>100</heap>
  </cache>
  <!-- end::customExpiry[] -->

</config>
