<ehcache:config
  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
  xmlns:ehcache='http://www.ehcache.org/v3'
  xsi:schemaLocation="http://www.ehcache.org/v3 ../../../main/resources/ehcache-core.xsd">
  
  <ehcache:cache alias="tiered">
    <ehcache:key-type>java.lang.String</ehcache:key-type>
    <ehcache:value-type>java.lang.String</ehcache:value-type>
    <ehcache:persistence-mode>create_if_absent</ehcache:persistence-mode>
    <ehcache:resources>
      <ehcache:heap size="10" unit="entries"/>
      <ehcache:disk size="100" unit="entries"/>
    </ehcache:resources>
  </ehcache:cache>
  
  <ehcache:cache-template name="tieredTemplate">
    <ehcache:key-type>java.lang.String</ehcache:key-type>
    <ehcache:value-type>java.lang.String</ehcache:value-type>
    <ehcache:persistence-mode>create_if_absent</ehcache:persistence-mode>
    <ehcache:resources>
      <ehcache:heap size="5"/>
      <ehcache:disk size="50"/>
    </ehcache:resources>
  </ehcache:cache-template>
  
</ehcache:config>